<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:padding="24dp">

    <TextView
        android:id="@+id/subscribeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Премиум-подписка"
        android:textSize="24sp"
        android:textColor="@color/text_light"
        android:fontFamily="@font/inter_bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/subscribeBenefits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Доступ ко всем премиум-уровням\n• Эксклюзивные функции\n• Новые материалы каждую неделю"
        android:textSize="16sp"
        android:textColor="@color/text_light"
        android:fontFamily="@font/inter_regular"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/monthlyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Месяц — $4.99"
            android:textColor="@color/white"
            android:backgroundTint="@color/text_blue"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/yearlyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Год — $49.99"
            android:textColor="@color/text_blue"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/subscribeNowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Оформить подписку"
        android:textColor="@color/white"
        android:backgroundTint="@color/text_blue"
        android:fontFamily="@font/inter_bold"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/subscribeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отмена в любой момент. Тестовая оплата."
        android:textSize="12sp"
        android:textColor="@color/text_tertiary_light"
        android:fontFamily="@font/inter_regular"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout> 