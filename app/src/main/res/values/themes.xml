<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LangUp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Accent color -->
        <item name="colorAccent">@color/accent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:colorBackground">@color/background_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Material specific attributes -->
        <item name="materialButtonStyle">@style/Button.LangUp</item>
        <item name="toolbarStyle">@style/Toolbar.LangUp</item>
        <item name="cardViewStyle">@style/Card.LangUp</item>
        <item name="chipStyle">@style/Chip.LangUp</item>
        <item name="textInputStyle">@style/TextInputLayout.LangUp</item>

        <!-- Ripple effect color -->
        <item name="colorControlHighlight">@color/chip_background_selected</item>
        <item name="colorControlNormal">@color/text_primary</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.LangUp.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Accent color -->
        <item name="colorAccent">@color/accent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_dark</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_light</item>

        <!-- Material specific attributes -->
        <item name="materialButtonStyle">@style/Button.LangUp</item>
        <item name="toolbarStyle">@style/Toolbar.LangUp</item>
        <item name="cardViewStyle">@style/Card.LangUp</item>
        <item name="chipStyle">@style/Chip.LangUp</item>
        <item name="textInputStyle">@style/TextInputLayout.LangUp</item>

        <!-- Ripple effect color -->
        <item name="colorControlHighlight">@color/chip_background_selected</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.LangUp.MainActivity" parent="Theme.LangUp">
        <item name="colorPrimary">@color/colorPrimaryMainActivity</item>
    </style>

    <style name="Theme.LangUp.WelcomeActivity" parent="Theme.LangUp">
        <item name="colorPrimary">@color/colorPrimaryWelcomeActivity</item>
    </style>

    <style name="Theme.LangUp.SettingsActivity" parent="Theme.LangUp">
        <item name="colorPrimary">@color/colorPrimaryWelcomeActivity</item>
    </style>

    <style name="Theme.LangUp.SeriesActivity" parent="Theme.LangUp">
        <item name="colorPrimary">@color/colorPrimaryWelcomeActivity</item>
    </style>

    <style name="Theme.LangUp.TranslationActivity" parent="Theme.LangUp">
        <item name="colorPrimary">@color/colorPrimaryWelcomeActivity</item>
    </style>

    <style name="Theme.LangUp.LoginActivity" parent="Theme.LangUp">
        <item name="colorPrimary">@color/colorPrimaryWelcomeActivity</item>
    </style>
    <style name="Theme.LangUp.SigninActivity" parent="Theme.LangUp">
        <item name="colorPrimary">@color/colorPrimaryWelcomeActivity</item>
    </style>

    <style name="Theme.LangUp.UserProfileActivity" parent="Theme.LangUp">
        <item name="colorPrimary">@color/colorPrimaryWelcomeActivity</item>
    </style>

    <style name="SeriesButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_container</item>
        <item name="android:textColor">#51514F</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
