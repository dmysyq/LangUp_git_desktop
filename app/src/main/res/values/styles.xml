<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- Custom Spinner Style -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:overlapAnchor">true</item>
    </style>

    <!-- Custom Spinner Dropdown Style -->
    <style name="CustomSpinnerDropDownStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownListViewStyle">@style/CustomSpinnerListViewStyle</item>
    </style>

    <!-- Custom Spinner ListView Style -->
    <style name="CustomSpinnerListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@color/background_primary</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources> 