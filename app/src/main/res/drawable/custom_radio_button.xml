<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8F5E9"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#4CAF50"/>
        </shape>
    </item>
    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFEBEE"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#F44336"/>
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFF8E1"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#FFC107"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#CCCCCC"/>
        </shape>
    </item>
</selector> 